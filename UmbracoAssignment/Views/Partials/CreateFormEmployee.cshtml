@model UmbracoAssignment.Models.EmployeeModel


<h2>Create</h2>

@using (Html.BeginUmbracoForm("AddEmployeePost", "Employees", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <div class="form-group mb-lg">
        <label>Name</label>
        <div class="input-group input-group-icon">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control input-lg", placeholder = "Name" })
        </div>
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div class="form-group mb-lg">
        <label>Email</label>
        <div class="input-group input-group-icon">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-lg", placeholder = "Email" })
        </div>
        @Html.ValidationMessageFor(m => m.Email)
    </div>
    <div class="form-group mb-lg">
        <label>Date of Birth</label>
        <div class="input-group input-group-icon">
            @Html.TextBoxFor(m => m.DoB, new { @class = "form-control input-lg", placeholder = "Email", type = "date" })
        </div>
        @Html.ValidationMessageFor(m => m.DoB)
    </div>
    <div class="form-group mb-lg">
        <label>Username</label>
        <div class="input-group input-group-icon">
            @Html.DropDownListFor(m => m.DepartmentId,
            new List<SelectListItem>
             { new SelectListItem { Text = "Select department", Value = "0", Selected=true},
               new SelectListItem { Text = "IT", Value = "1"},
               new SelectListItem { Text = "DevOps", Value = "2"}
               },
            new { @class = "form-control" })
        </div>
        @Html.ValidationMessageFor(m => m.DoB)
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>

}
